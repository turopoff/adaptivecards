{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Input.Text",
            "label": "First Name",
            "placeholder": "Placeholder First Name",
            "id": "first_name",
            "value": "${$root.first_name}"
        },
        {
            "type": "Input.Text",
            "label": "Last Name",
            "placeholder": "Placeholder Last Name",
            "id": "last_name",
            "value": "${$root.last_name}"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Sign Up",
            "associatedInputs": "none"
        }
    ]
}